<?xml version="1.0" encoding="utf-8"?>
<com.itamarlourenco.myforms.ui.navigationView.NavigationViewCustom xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigationView"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/drawer_header" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/menuNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</com.itamarlourenco.myforms.ui.navigationView.NavigationViewCustom>